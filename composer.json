{
  "name": "previousnext/phpunit-finder",
  "description": "PHP lib for finding and outputting all tests from a phpunit.xml config file.",
  "keywords": ["testing"],
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Kim Pepper",
      "email": "kim@previousnext.com.au"
    },
    {
      "name": "Lee Rowlands",
      "email": "lee.rowlands@previousnext.com.au"
    }
  ],
  "require": {
    "php": "^8.1",
    "phpunit/phpunit": "^9.4||^10.5",
    "symfony/console": "^6.4||^7"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
    "drupal/coder": "~8.3.12",
    "phpcompatibility/php-compatibility": "^9.3"
  },
  "autoload": {
    "psr-4": {"PhpUnitFinder\\": "src/"}
  },
  "autoload-dev": {
    "psr-4": {"PhpUnitFinder\\Tests\\": "tests/"}
  },
  "bin" : ["phpunit-finder"],
  "config": {
    "bin-dir": "bin/",
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
